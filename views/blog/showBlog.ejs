                    <%if(!currentUser){%>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/signin">Sign in</a></li>

                        <%}else{%>
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/admin">
                                    <%=currentUser.name%>
                                </a>
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/signout">Sign out</a>
                            </li>
                            <%}%>


                </ul>
            </div>
        </div>
    </nav>

    <header class="masthead">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>
                            <%=foundBlog.blogTitle%>
                        </h1>
                        <h2>
                            <%=foundBlog.comSentence%>
                        </h2>
                        <span class="subheading">
                            Hasan SÃ¶nmez </span>
                    </div>
                </div>
