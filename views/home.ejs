<%- include('./partials/header') %>

    <header class="masthead"
        style="background-image: url('https://images.unsplash.com/photo-1682687218982-6c508299e107?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>
                            devBlog
                        </h1>
                        <span class="subheading">
                            Hasan Sönmez </span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container px-4 px-lg-5">
        <% foundBlogs.reverse().forEach((blog)=> { %>


            <div class="row gx-4 gx-lg-5 justify-content-center">

                <div class="col-md-9 col-xl-7">
                    <!-- Post preview-->
                    <div class="post-preview">
                        <a href="/blogs/<%= blog._id %>">
                            <h2 class="post-title">
                                <%= blog.blogTitle %>
                            </h2>
                            <h3 class="post-subtitle">
                                <%= blog.comSentence %>
                            </h3>
                        </a>
                        <p class="post-meta">
                            Posted by <a href="#!">
                                <%=blog.author%>

                            </a>
                            <%=blog.date%>
                        </p>
                    </div>

                    <!-- Pager-->

                    <hr class="my4">

                </div>
            </div>
            <%})%>
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older
                        Posts →</a></div>
    </div>
    <%- include('./partials/footer') %>